mixin hexa(opt)
  - var type = opt.type || ""
  #hexa
    case type
      when "cabe"
        img.hexa-img.hexa-img-logo(scr="logo")
        .cabe
          | Cabe
          span.music
            | music
      default
        .hexagon(data-hexagon)
          img.hexa-img(src="https://i.imgur.com/i53CKiO.png")
          .face1
          .face2
        .hexa-user
          | John Lemon
        .hexa-notif
          | 3
    
